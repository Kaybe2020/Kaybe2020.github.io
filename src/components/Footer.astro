---
const {
    class: classProp
} = Astro.props

//If you want to change the responsive height of footer:
//tweak the `[--footer-height:${x}]` classes inside of footer component
---

<footer class:list={[
    classProp,
     "[--footer-height:6] h-[calc(var(--block-size)*var(--footer-height))] xs:[--footer-height:3] sm:[--footer-height:2] md:[--footer-height:1] w-full bg-block-bedrock"
]}>
    <div class="flex flex-col sm:flex-row items-center justify-between h-full p-5 bg-dark-75 text-white">
        <header class="flex flex-col gap-3 w-full sm:w-[60%]">
             <p>Laboratoire de veille technologique 2023 - 2024</p>
        </header>
    <p class="self-middle flex flex-col items-end gap-1">Karen Bonfils</p>
</div>
</footer>
